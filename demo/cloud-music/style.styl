$theme_color = #d44439    // 设置一个颜色变量
$underline_color = #f1f1f1
.top
    display: flex
    justify-content: space-between
    padding 5px 10px
    background-color: $theme_color
    span 
        line-height 40px
        color: #f1f1f1
        font-size: 20px
        &.iconfont
            font-size: 25px
.tabbar
    height 44px
    display:  flex
    justify-content: space-around
    background-color: $theme_color
    a 
        flex: 1
        text-decoration none
        padding 2px 0
        font-size: 14px
        color: #e4e4e4
        .item
            height 100%
            display: flex
            justify-content: center
            align-items: center
        &.selected
            span 
                padding 3px 0 
                font-weight: 700
                color: $underline_color
                border-bottom: 2px solid $underline_color
                // transition: all 1s ease-in-out
.swiper-container
    height 144px
    .focus-item-img
        width 100%
        height 100%